<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="332dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/subtraction"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_level1"
        android:layout_width="216dp"
        android:layout_height="79dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#db5a6b"
        android:text="Level 1"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_level2"
        android:layout_width="224dp"
        android:layout_height="84dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#68a0b0"
        android:text="Level 2"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_level1" />

    <Button
        android:id="@+id/btn_level3"
        android:layout_width="228dp"
        android:layout_height="84dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#FF00F2"
        android:text="Level 3"
        android:textSize="34sp"
        app:icon="@color/purple_200"
        app:iconTint="@color/purple_200"
        app:iconTintMode="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_level2" />

    <Button
        android:id="@+id/btn_level"
        android:layout_width="224dp"
        android:layout_height="81dp"
        android:layout_marginTop="244dp"
        android:backgroundTint="#5b39c6"
        android:text="Level Lessons"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@color/purple_200"
        app:iconTint="@color/purple_200"
        app:iconTintMode="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_level2" />

    <ImageButton
        android:id="@+id/btn_Backnav"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/teal_200"
        android:foregroundTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>

